<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context=".EditarPerfil">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.775"
        app:layout_constraintVertical_bias="0.775">

        <ImageView
            android:id="@+id/imgFotoperfil"
            android:layout_width="113dp"
            android:layout_height="107dp"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/user" />

        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:textColor="#009688"
            android:textColorHint="#009688"
            android:textColorLink="#009688" />

        <EditText
            android:id="@+id/txtApellidos"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Apellidos"
            android:inputType="textPersonName"
            android:textColor="#009688"
            android:textColorHint="#009688"
            android:textColorLink="#009688" />

        <EditText
            android:id="@+id/txtCiudad"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Ciudad"
            android:inputType="text"
            android:textColor="#009688"
            android:textColorHint="#009688"
            android:textColorLink="#009688" />

        <EditText
            android:id="@+id/txtTelefono"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Telefono"
            android:inputType="textPhonetic"
            android:textColor="#009688"
            android:textColorHint="#009688"
            android:textColorLink="#009688" />

        <EditText
            android:id="@+id/lblFechaNacimiento"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Fecha de Nacimiento"
            android:inputType="date"
            android:textColor="#009688"
            android:textColorHint="#009688"
            android:textColorLink="#009688" />

        <EditText
            android:id="@+id/txtPrimaria"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Estudios de Primaria"
            android:inputType="text"
            android:textColor="#009688"
            android:textColorHint="#009688"
            android:textColorLink="#009688" />

        <EditText
            android:id="@+id/txtSecundaria"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Estudios de Secundaria"
            android:inputType="text"
            android:textColor="#009688"
            android:textColorHint="#009688"
            android:textColorLink="#009688" />

        <EditText
            android:id="@+id/txtUniversidad"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Estudios Universitarios"
            android:inputType="text"
            android:textColor="#009688"
            android:textColorHint="#009688"
            android:textColorLink="#009688" />


        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="5dp">

            <RadioButton
                android:id="@+id/radio_femenino"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/radio_group"
                android:onClick="checkButton"
                android:text="Femenino" />

            <RadioButton
                android:id="@+id/radio_masculino"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/radio_group"
                android:checked="true"
                android:onClick="checkButton"
                android:text="Masculino" />


        </RadioGroup>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="355dp"
            android:layout_height="match_parent"


            android:layout_gravity="center"
            android:background="#009688"
            android:gravity="center"
            android:text="Aceptar"
            android:textColor="#FFFFFF" />


    </LinearLayout>

    </ScrollView>
